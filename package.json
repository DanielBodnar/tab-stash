  "devDependencies": {
    "css-loader": "^0.28.11",
    "vue": "^2.5.16",
    "vue-loader": "^15.2.4",
    "vue-template-compiler": "^2.5.16",
    "vuedraggable": "^2.16.0",
    "web-ext": "^2.7.0",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8"
  },
  "scripts": {
    "build": "webpack",
    "clean": "git status --ignored -s dist |grep '^[?!]' |cut -d' ' -f2 |xargs rm",
