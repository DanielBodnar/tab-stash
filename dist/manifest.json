{
    "manifest_version": 2,
    "name": "Tab Stash",
    "version": "2.5",
    "description": "A no-fuss way to save and restore batches of tabs as bookmarks.",
    "homepage_url": "https://github.com/josh-berry/tab-stash",
    "icons": {
        "48": "icons/logo.svg",
        "96": "icons/logo.svg"
    },
    "applications": {
        "gecko": {
            "id": "tab-stash@condordes.net",
            "strict_min_version": "61.0"
        }
    },
    "permissions": [
        "sessions",
        "tabs",
        "tabHide",
        "bookmarks",
        "menus",
        "browserSettings",
        "storage"
    ],
    "content_security_policy":
        "script-src 'self' 'unsafe-eval'; object-src 'self';",
    "background": {
        "scripts": ["index.js"]
    },
    "browser_action": {
        "default_title": "Stash all (or selected) open tabs",
        "default_icon": {
            "16": "icons/light/stash.svg",
            "32": "icons/light/stash.svg"
        },
        "theme_icons": [{
            "light": "icons/dark/stash.svg",
            "dark": "icons/light/stash.svg",
            "size": 16
        }, {
            "light": "icons/dark/stash.svg",
            "dark": "icons/light/stash.svg",
            "size": 32
        }],
        "browser_style": false
    },
    "page_action": {
        "default_title": "Stash this tab",
        "default_icon": {
            "16": "icons/stash-one.svg",
            "32": "icons/stash-one.svg"
        },
        "browser_style": false,
        "show_matches": ["<all_urls>"],
        "hide_matches": ["file:///*"]
    },
    "sidebar_action": {
        "default_title": "Tab Stash",
        "default_icon": {
            "16": "icons/logo.svg",
            "32": "icons/logo.svg"
        },
        "default_panel": "stash-list.html",
        "browser_style": false
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Alt+T",
                "mac": "MacCtrl+Shift+T"
            }
        },
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Alt+S",
                "mac": "MacCtrl+Shift+S"
            }
        },
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Alt+W",
                "mac": "MacCtrl+Shift+W"
            }
        }
    }
}
